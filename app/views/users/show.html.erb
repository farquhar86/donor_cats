<%= render "layouts/navbar" %>
<div class="container">
	<div class="row">
		<div class="jumbotron" id="profile_jumbo">
			<div class="row">
				<div class="col-lg-3 text-center">
					<%= image_tag("profile.jpg", alt: "Cool Kangaroo", class: "profile_pic") %>
				</div>
				<div class="col-lg-6">
					<h2><%= @user.full_name %></h2>
					<p>Member since <%= @user.created_at.strftime("%D") %></p>
					<br>
					<p>Currently donating <span class="green">$<%= @user.donations.inject(0) {|sum, d| sum + d.monthly_amount} %></span> per month</p>
					<br>
					<% @user.donations.each do |d| %>
						<p>Next donation: $<%= d.monthly_amount %> on <%= d.created_at.strftime("%D") %></p>
					<% end %>
				</div>
				<div class="col-lg-3 text-center">
					<h1 class="green">$<%= @user.donations.inject(0) {|sum, d| sum + d.amount} + @user.donations.inject(0) {|sum, d| sum + d.monthly_amount} %></h1>
						<!-- Needs some kind of * (Time.now - @user.donations.created_at.to_time)/1.month).round -->
					<h4>Donated so far!</h4>
				</div>
			</div>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="text-center">
			<h3>Your selected charities</h3>
			<% @user.donations.each do |d| %>
				<p>test</p>
			<% end %>
		</div>
	</div>
	<hr>
	<div class="row text-center">
		<a class="btn btn-success" href="/charities">Find More Charities!</a>
	</div>
	<hr>
	<div class="row">
		<div class="col-lg-6">
			<h2 class="profile_title">News Feed</h2>
		</div>
		<div class="col-lg-6">
			<h2 class="profile_title">Charity Breakdowns</h2>
		</div>
	</div>
</div>