<%= render "layouts/navbar" %>
<div class="container">
	<div class="row">
		<div class="jumbotron" id="profile_jumbo">
			<div class="row">
				<div class="col-lg-3 text-center">
					<%= image_tag("profile.jpg", alt: "Cool Kangaroo", class: "profile_pic") %>
				</div>
				<div class="col-lg-6">
					<h2><%= @user.full_name %></h2>
					<p>Member since ...</p>
					<br>
					<p>Currently donating <span class="green">$50</span> per month</p>
					<br>
					<p>Next donation: ...</p>
