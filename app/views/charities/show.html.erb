<%= render "layouts/navbar" %>

<div class="container">
	<div class="row">
		<img src="<%= @charity.image %>">
	</div>
	<div class='row'>
		<h1><%= @charity.name %></h1>
		<p><%= @charity.discription %></p>
		<div class="row">
			<div class="col-sm-1">
				<%= link_to "Back", charities_path, :class => 'submit_button btn btn-default' %>
			</div>
			<div class='col-sm-1'>
				<%= form_tag("/signup", method: "get") do %>
					<%= hidden_field :id, :value => @charity.id %>

					<%= submit_tag "Donate", :class => 'submit_button btn btn-default' %>
		        <% end %> 
	    	</div>
	    	
    	</div>
   
		
	</div>	
</div>	