<%= render "layouts/navbar" %>
	<div class="container">
		<div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Donation Amount</h3>
                </div>
                <div class="panel-body">
                    <form role="form" id="payment-form">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    
                                    <input placeholder="One Time Donation Amount" class="form-control"></input> 
                                   <br>
                                    <input placeholder="Monthly Donation Amount" class="form-control"></input> 
                                </div>                            
                            </div>
                        </div>
                    </form>
                </div>    
            </div>
        </div>
        
        
        
        
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Payment Details</h3> <!-- <img class="pull-right" src="http://i76.imgup.net/accepted_c22e0.png"> -->
                </div>
                <div class="panel-body">
                    <form role="form" id="payment-form">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="cardNumber">CARD NUMBER</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="cardNumber" placeholder="Valid Card Number" required autofocus data-stripe="number" />
                                        <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                    </div>
                                </div>                            
                            </div>
                        </div>
                        <div class="row">
                            
                                <div class="col-sm-4">
                                <label for="expMonth">EXPIRATION DATE</label>
                                    <input type="text" class="form-control" name="expMonth" placeholder="MM" required data-stripe="exp_month" />
                                </div>
                               
                                <div class="col-sm-4">
                                	<label for="expMonth">EXPIRATION DATE</label>
                                    <input type="text" class="form-control" name="expYear" placeholder="YY" required data-stripe="exp_year" />
                                </div>                    
                            <div class="col-sm-3 pull-right">
                                <div class="form-group">
                                    <label for="cvCode">CV CODE</label>
                                    <input type="password" class="form-control" name="cvCode" placeholder="CV" required data-stripe="cvc" />
                                </div>
                            </div>
                           
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <button class="btn btn-success btn-lg btn-block" type="submit">Send Donation</button>
                            </div>
                        </div>
                        <div class="row" style="display:none;">
                            <div class="col-sm-12">
                                <p class="payment-errors"></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


	</div>	
